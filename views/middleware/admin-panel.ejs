<% include ../index.ejs %>

<main role="main" class="container">
    <div class="my-5 p-3 bg-white rounded shadow-sm">
        <% if (message != '') { %>
        <p class="text-center text-danger"><%= message %></p>
        <% } %>
<% if (users.length > 0 ) { %>
    <h2>Admin Dashboard</h2>
        <!-- START FORM -->
        
        <table class="table table-hovered table-bordered table-responsive">
            <caption>Hi <%= username %></caption>
            <thead class="thead-dark" width='110%';>
                <tr>
                    <th scope="col">Block</th>
                    <th scope="col">ID</th>
                    <th scope="col">Image</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Hobbies</th>
                    <th scope="col">Gender</th>
                    <th scope="col">D.O.B.</th>
                    <th scope="col">Address1</th>
                    <th scope="col">Address2</th>
                    <th scope="col">City</th>
                    <th scope="col">Country</th>
                    <th scope="col">Zip</th>
                    <th scope="col">About Users</th>
                    <!-- <th scope="col">Edit</th> -->
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                <% users.forEach((user, index) => { %>
                <tr>
                    <th scope="row"> <input type="checkbox"> </th>
                    <th scope="row"> <%= user.id%> </th>
                    <td><img src="/assets/img/<%= user.avtar %>" class="rounded-circle player-img" alt="" height="20px"> </td>
                    <td> <%= user.username%> </td>
                    <td> <%= user.email %> </td>
                    <td> <%= user.hobbies %> </td>
                    <td> <%= user.gender %> </td>
                    <td> <%= user.dob.toLocaleDateString() %> </td>
                    <td> <%= user.address1 %> </td>
                    <td> <%= user.address2 %> </td>
                    <td> <%= user.city %> </td>
                    <td> <%= user.country %> </td>
                    <td> <%= user.zip %> </td>
                    <td style="width: 8em;"> <%= user.textareawrite %> </td>

                    <div class="row">
                        <div class="col-2">
                            
                            <div class="col-2">
                                    <td>
                                        <a href="/users/admin/delete/<%= user.id %> " class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </div>
                        </div>
                    </div>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } else { %>
        <p class="text-center">No users Found</p>
        <% } %>
        <!-- END FORM -->
    </div>
</main>

<% include ../include/script.ejs %>